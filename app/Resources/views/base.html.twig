{% if app.user %}
    <script>
    $(document).on('click', '[id^="makeProfile_"]', function(){ 
      $('#pleaseWaitModal').modal('show');
      $('#waiting_for_message').html('Creating profile picture... <br /> Please wait... this may take a while...');
      //when you click on "make profile" button to change profile picture
      var nameId = jQuery(this).attr("id");
      var arrStr = nameId.split("_");
      var id = arrStr[1];
      
      $("#image").cropper('getCroppedCanvas').toBlob(function (blob) {
      var formData = new FormData();

      formData.append('croppedImage', blob);
      
      $.ajax('{{ path('ajax_upload') }}', {
        method: "POST",
        data: formData,
        processData: false,
        contentType: false,
        success: function (data) {
          console.log("upload: "+data.type);
          $.ajax({
            url:'{{ (path('make_profile_picture')) }}',
            type: "POST",
            dataType: "json",
            data: {
                "id": id,
            },
            async: true,
            success: function (data)
            {
                location.href = "{{ path('user_profile', {'slug': app.user.randomAuth}) }}";
            }
          });
        },
        error: function () {
          console.log('Upload error');
        }
      });

    });

      });
    </script>
