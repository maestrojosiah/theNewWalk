{% extends 'base.html.twig' %}
{% block header %}
<!-- Page Header -->
<header class="masthead" style=" height:100px; background-image: url('{{ asset('img/home-bg.jpg') }}')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
      </div>
    </div>
  </div>
</header>
{% endblock %}

{% block content %}



<div class="container">
    <h4>{{ user.firstName }} {{ user.lastName }}'s Photos</h4>
  <div class="row infinite-container" id="basis">
	<div class="card-columns infinite-item">
      {% for photo in photos %}
		  <div class="card">
		    <img class="card-img-top img-fluid" src="{{ asset('photos/profile/' ~ photo.filename) }}" alt="Card image cap">
		    <div class="card-block">
		      <p class="card-text">{{ photo.caption }}</p>
		      <a href='{{ path('view_photo', {'id': photo.id } ) }}' class='btn btn-primary'>View / Comment</a>
		    </div>
		  </div>
  	  {% endfor %} 

	</div>
  <div class="card">
    <div class="card-block">
	  {% if nextPage is defined and nextPage != "blank" %}       
    <a class="infinite-more-link" href="{{ path('view_all_photos', {'user': user.id, 'page':nextPage} ) }}" style="visibility: hidden;"></a>
  {% endif %}
    </div>
  </div>

  </div>
</div>	












{% endblock %}
